#!/usr/bin/env bash

if [ "$EUID" -eq 0 ]; then
    echo "Please don't run this as root."
    exit 1
fi

set -eux

rpm-ostree override remove gnome-software gnome-software-rpm-ostree \
	firefox firefox-langpacks

rpm-ostree install adw-gtk3-theme papirus-icon-theme jetbrains-mono-fonts \
	stow micro wl-clipboard gcc zsh
