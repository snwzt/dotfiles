#!/usr/bin/env bash

if [ "$EUID" -ne 0 ]; then
    echo "Please run this script as root."
    exit 1
fi

set -eux

# vscode
sh -c 'echo -e "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc" > /etc/yum.repos.d/vscode.repo'

# base removal
rpm-ostree override remove firefox firefox-langpacks gnome-software gnome-software-rpm-ostree

# base addition
rpm-ostree install code gedit gnome-shell-extension-caffeine gnome-shell-extension-just-perfection \
	distrobox adw-gtk3-theme stow
