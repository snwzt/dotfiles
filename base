#!/bin/bash

if [ "$EUID" -ne 0 ]; then
    echo "Please run this script as root."
    exit 1
fi

set -eux

# base removal
rpm-ostree override remove firefox firefox-langpacks gnome-software gnome-software-rpm-ostree \
	gnome-terminal gnome-terminal-nautilus

# base addition
rpm-ostree install gnome-shell-extension-appindicator gnome-shell-extension-just-perfection adw-gtk3-theme \
    papirus-icon-theme jetbrains-mono-fonts alacritty tmux distrobox podman-compose stow
